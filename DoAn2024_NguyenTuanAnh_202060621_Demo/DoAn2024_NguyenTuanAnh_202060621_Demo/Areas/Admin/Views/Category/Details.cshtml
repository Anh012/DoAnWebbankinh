@model DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Thông tin chi tiết danh mục </h3>
    </div>
    <div class="card-body">
        <div class="bs-stepper-content">


            <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger" align="center">
                <p>
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary" })  |
                    <a href="/admin/category" class="btn btn-sm btn-light">Quay lại</a>
                </p>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Tên danh mục
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        Mô tả
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    @*<dt>
                            @Html.DisplayNameFor(model => model.SeoTitle)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SeoTitle)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SeoDescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SeoDescription)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SeoKeywords)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SeoKeywords)
                        </dd>*@

                    <dt>
                        Thứ tự
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Position)
                    </dd>

                    <dt>
                        Người tạo
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedBy)
                    </dd>

                    <dt>
                        Ngày tạo
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>

                    <dt>
                        Ngày sửa đổi
                    </dt>

                    <dd>
                        @if (Model.ModifiedDate != Model.CreatedDate)
                        {
                            @Html.DisplayFor(model => model.ModifiedDate)
                        }
                        else
                        {
                            @:&nbsp; <!-- Hiển thị một khoảng trắng nếu ngày sửa đổi bằng ngày tạo -->
                        }
                    </dd>

                    <dt>
                        Người sửa đổi
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Modifiedby)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Alias)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Alias)
                    </dd>

                    <dt>
                        Hiển thị
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>

                </dl>
            </div>

        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
    <!-- /.card-footer-->
</div>
<!-- /.card -->
