@model IEnumerable<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_OrderDetail>

@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.tb_Product.Title</td>
                    <td>@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.Price), 0) ₫</td>
                    <td>@item.Quantity</td>
                    <td>@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.Price * item.Quantity), 0) ₫</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}

