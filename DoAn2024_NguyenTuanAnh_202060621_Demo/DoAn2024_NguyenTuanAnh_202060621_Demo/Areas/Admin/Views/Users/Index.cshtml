
@model PagedList.IPagedList<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách tài khoản</h3>

            <div class="card-tools">
                <a href="/admin/users/create" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <form enctype="multipart/form-data"></form>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tài khoản</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Địa chỉ</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>
                                    @item.UserName
                                    @switch (item.UserRoles.FirstOrDefault()?.idRole)
                                    {
                                        case 1:
                                            <span class="badge badge-success">Admin</span>
                                            break;
                                        case 2:
                                            <span class="badge badge-primary">Khách hàng</span>
                                            break;
                                        case 3:
                                            <span class="badge badge-warning">Nhân viên</span>
                                            break;
                                        default:

                                            break;
                                    }
                                </td>
                                @*<td>@item.UserName @(item.UserRoles.Any(r => r.idRole == 1) ? "✔️" : "")</td>*@
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                <td>
                                    @*<a href="/admin/users/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>*@
                                    <a href="/admin/users/Delete/@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-3" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

