<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách liên hệ</h3>

            @*<div class="card-tools">
                    <a href="/admin/product/create" class="btn btn-primary">Thêm mới</a>

                </div>*@
        </div>
        <div class="card-body">
