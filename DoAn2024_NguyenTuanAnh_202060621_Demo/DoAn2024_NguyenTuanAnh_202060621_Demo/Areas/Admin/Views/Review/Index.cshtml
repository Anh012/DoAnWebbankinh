            <div class="row">
                <div class="col-5">
                    @using (Html.BeginForm("Index", "Review", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", null, new { @class = "form-control" })
                            @*<input type="text" name="searchtext" class="form-control">*@
                            <span class="input-group-append">
                                    <button type="submit" class="btn btn-light btn-flat">Tìm kiếm</button>
                                </span>
                        </div>
                    }
                </div>
            </div>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th>STT</th>
                        <th>Tên</th>
                        <th>Tài khoản</th>
                        <th>Liên hệ</th>
                        <th>Ngày đánh giá</th>
                        <th>Đánh giá</th>
                        <th>Nội dung</th>
                        <th>Sản phẩm</th>
                        <th>Mã sản phẩm</th>




                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                           
                        
                            <tr id="trow_@item.Id">

                                <td>@i</td>

                                <td>@item.FullName</td>
                                <td>@item.UserName</td>
                                <td>@item.Emaill</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.Rate</td>
                                <td>@item.Contentt </td>
                                <td>@item.tb_Product.Title </td>
                                <td>@item.tb_Product.ProductCode </td>

                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-3" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
