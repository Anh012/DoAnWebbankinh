            <div class="row">
                <div class="col-5">
                    @using (Html.BeginForm("Index", "Contact", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @*@Html.TextBox("Searchtext", null, new { @class = "form-control" })*@
                            @*<input type="text" name="searchtext" class="form-control">*@
                            @*<span class="input-group-append">
                                    <button type="submit" class="btn btn-light btn-flat">Tìm kiếm</button>
                                </span>*@
                        </div>
                    }
                </div>
            </div>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>

                        <th>STT</th>
                        <th>Tên</th>
                        <th>Tài khoản</th>
                        <th>Liên hệ</th>
                        <th>Ngày tạo</th>
                        <th>Tin nhắn</th>
                        <th>Đã đọc</th>


                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCheckRead = item.IsRead ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";


                            <tr id="trow_@item.Id">

                                <td>@i</td>

                                <td>@item.Name</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.Message</td>
                                <td class="text-center">
                                    <a href='#' data-id="@item.Id" class="btnRead">@Html.Raw(strCheckRead)</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-3" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
