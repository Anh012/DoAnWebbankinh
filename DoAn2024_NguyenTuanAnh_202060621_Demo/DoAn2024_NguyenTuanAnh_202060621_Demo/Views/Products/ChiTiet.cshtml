@model DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_Product
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">
@if (Model != null)
{


    <div class="container single_product_container">
        <div class="row">
            <div class="col">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/san-pham/@Model.tb_ProductCategory.Alias-@Model.ProductCategoryId"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.tb_ProductCategory.Title</a></li>
                        <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.Title</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-lg-7">
                @if (Model.tb_ProductImage != null && Model.tb_ProductImage.Any())
                {
                    <div class="single_product_pics">
                        <div class="row">
                            <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                                <div class="single_product_thumbnails">
                                    <ul>
                                        @foreach (var item in Model.tb_ProductImage)
                                        {
                                            if (item.IsDefault)
                                            {
                                                <li class="active"><img src="@item.Image" alt="" data-image="@item.Image " style="height: 125px; width: 140px "></li>
                                            }
                                            else
                                            {
                                                <li><img src="@item.Image" alt="" data-image="@item.Image" style="height: 125px; width: 140px "></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-9 image_col order-lg-2 order-1">
                                <div class="single_product_image">
                                    <div class="single_product_image_background" style="background-image:url(@Model.tb_ProductImage.FirstOrDefault(x=>x.IsDefault).Image); width: 100%; height: 400px;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @*<div class="single_product_pics">
                        <div class="row">

                            <div class="col-lg-9 image_col order-lg-2 order-1">
                                <div class="single_product_image">
                                    <div class="single_product_image_background" style="background-image:url(@Model.Image)"></div>
                                </div>
                            </div>
                        </div>
                    </div>*@
            </div>
            <div class="col-lg-5">
                <div class="product_details">
                    <div class="product_details_title">
                        <h2>@Model.Title</h2>
                        <p>@Model.Description</p>
                        <p>@Model.ViewCount lượt xem</p>
                    </div>
                    @if (Model.PriceSale > 0)
                    {
                        <div class="original_price">@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((Model.Price), 0) <span>₫</span></div>
                        <div class="product_price">@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((Model.PriceSale), 0)   <span>₫</span></div>
                    }
                    else
                    {
                        <div class="product_price">@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((Model.Price), 0)</div>
                    }
                    <ul class="star_rating">
                        @{
                            int star = Convert.ToInt32(ViewBag.Average);
                        }
                        @if (star == 1)
                        {

                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>

                        }
                        else if (star == 2)
                        {

                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>

                        }
                        else if (star == 3)
                        {

                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>

                        }
                        else if (star == 4)
                        {

                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>

                        }
                        else if (star == 5)
                        {

                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            <li><i class="fa fa-star" aria-hidden="true"></i></li>

                        }
                        else
                        {

                            <p>Chưa có đánh giá</p>
                        }
                        @*@Html.Raw(DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.HtmlRate(item.Rate))*@
                    </ul>

                    <div class="product_color">

                         @if (Model.Quantity > 0) {
                        
                       <p>Còn lại: @Model.Quantity</p> }
                            else
                                            {
                            <p >Sản phẩm đã hết xin vui lòng xem sản phẩm khác</p>
                                            }
                        
                        @*<span>Chọn màu:</span>
                            <ul>
                                <li style="background: #000000"></li>
                                <li style="background: #808080"></li>
                                <li style="background: #ff0000"></li>
                            </ul>*@

                    </div>

                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                        <span>Số lượng:</span>
                        <div class="quantity_selector">
                            <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                            <span id="quantity_value">1</span>
                            <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                        </div>
                        <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@Model.Id">Thêm giỏ hàng</a></div>
                        @*<div class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>*@
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="tabs_section_container">

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="tabs_container">
                        <ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center">
                            <li class="tab active" data-active-tab="tab_1"><span>Mô tả</span></li>
                            @*<li class="tab" data-active-tab="tab_2"><span>Additional Information</span></li>*@
                            <li class="tab" data-active-tab="tab_3"><span>Đánh giá (@ViewBag.Count)</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <!-- Tab Description -->

                    <div id="tab_1" class="tab_container active">
                        <div class="row">
                            @Html.Raw(Model.Detail)
                        </div>
                    </div>

                    <!-- Tab Additional Info -->
                    <!-- Tab Reviews -->

                    <div id="tab_3" class="tab_container">
                        <div class="row">

                            @*User Reviews*@
                            <div class="col-lg-6 reviews_col">
                                @Html.Action("_Load_Review", "tb_Review", new { productId = Model.Id })
                            </div>

                            @*Add Review*@

                            @if (ViewBag.NhanVienExists == true)
                            {


                                <div class="col-lg-6 add_review_col">


                                    @Html.Action("_Review", "tb_Review", new { productId = Model.Id })
                                </div>
                            }
                            else if (ViewBag.NhanVienExists == false)
                            {
                                <p></p>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

}
@section scripts{
    <script src="~/Content/assets/js/single_custom.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}

