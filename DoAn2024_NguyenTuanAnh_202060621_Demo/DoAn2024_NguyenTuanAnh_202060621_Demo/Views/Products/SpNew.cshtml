@model IEnumerable<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_Product>
@if (Model !=null && Model.Any())
{
    foreach (var item in Model)
    {
        <!-- Product 1 -->
        var strImage = "";
        var img = item.tb_ProductImage.FirstOrDefault(x => x.IsDefault);
        if(img != null){
            strImage=img.Image;
        }
        <div class="product-item @item.tb_ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImage" alt="" style="max-width: 300px; height: 250px;">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    var discountPercentage = 100 - (item.PriceSale / item.Price) * 100;
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                        <span>@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((discountPercentage), 0)%</span>
                    </div>
                }
                @*<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>*@
                <div class="product_info">
                    <h6 class="product_name"><a href="chi-tiet/@item.Alias-@item.Id">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.PriceSale), 0) ₫ <span>@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.Price), 0) ₫</span></div>

                    }
                    else
                    {
                        <div class="product_price">@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.Price), 0) ₫</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">Thêm vào giỏ</a></div>
        </div>
    }
}
