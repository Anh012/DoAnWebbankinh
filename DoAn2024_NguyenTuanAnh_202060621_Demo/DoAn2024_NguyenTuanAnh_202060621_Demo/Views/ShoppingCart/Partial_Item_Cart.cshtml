@model IEnumerable<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.Cart.ShoppingCartItem>

<table class="table">

    @if (Model != null && Model.Any())
    {
        <tr class="text-center">
            <th>STT</th>
            <th>Ảnh sản phẩm</th>
            <th>Tên sản phẩm</th>
            @*<th>Danh mục</th>*@
            <th>Giá</th>

            <th style="width:100px;">Số lượng</th>
            <th>Thành tiền</th>
            <th style="width:200px;">

            </th>
        </tr>
        var i = 0;
        var tongtien = decimal.Zero;
        foreach (var item in Model)
        {
            tongtien += item.TotalPrice;
            <tr class="text-center" id="trow_@item.ProductId">
                <td>@(i+1)</td>
                <td><img src="@item.ProductImg" width="60" /></td>
                <td>
                    <a href="/chi-tiet/@item.Alias-@item.ProductId">
                        @item.ProductName
                    </a>
                </td>
                @*<td>@item.CategoryName</td>*@
                <td>@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.Price), 0) ₫</td>
                <td>@item.Quantity</td>
                <th>@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((item.TotalPrice), 0) ₫</th>
                <td>
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                    @*<a href="#" data-id="@item.ProductId" class="btn btn-sm btn-success btnUpdate">Cập nhật</a>*@
                </td>
            </tr>
            i++;
           
        }
        <tr>
            <th colspan="6" class="text-right">Tổng: </th>
            <th class="text-center">@DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.FormatNumber((@tongtien), 0) ₫</th>
            <th></th>
        </tr>

    }
    else
    {
        <tr align="center">
            <th>Không có sản phẩm trong giỏ hàng!!</th>
        </tr>
    }
</table>


