
@{
    Layout = null;
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="Dangnhap.css" type="text/css">
    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        body {
            background: url("../../../../Uploads/UpImages/login2.jpg") no-repeat center center fixed;
            background-position: center;
            background-size: cover;
        }

        .containers {
            width: 100%;
            height: 600px;
            padding: 100px 0px;
            color: white;
        }



        .main {
            width: 500px;
            height: 520px;
            background-color: rgba(0,0,0,0.3);
            margin: 0 auto;
            color: white;
            padding: 0px 25px;
        }


        .avatar {
            height: 100px;
            width: 100px;
            background-color: #E3869A;
            position: relative;
            left: 175px;
            top: -50px;
            border-radius: 50%;
            padding: 7px 10px;
        }

        .top {
            text-align: center;
            margin-bottom: 30px;
        }

            .top h1 {
                font-weight: 400;
                font-size: 35px;
            }




        .login form input[type="text"], .login form input[type="password"] {
            background: url("../../../../Uploads/UpImages/user.png") no-repeat 0px 5px;
            outline: none;
            width: 100%;
            padding: 12px 13px 20px 44px;
            border: none;
            border-bottom: 1px solid #fff;
            font-size: 15px;
            font-weight: 400;
            margin-bottom: 20px;
            color: #fff;
        }

        .login form input[type="password"] {
            background: url("../../../../Uploads/UpImages/pass.png") no-repeat 0px 5px;
        }

        ::placeholder {
            color: white !important;
        }

        .remember {
            padding: 5px 0px;
            margin: 20px 0px;
        }

            .remember input[type="checkbox"] {
                margin-right: 8px;
            }

            .remember label {
                font-size: 14px;
                margin-bottom: 3px;
            }

        .fogot {
            float: right;
            padding: 5px;
        }

            .fogot h6 a {
                color: white;
                font-weight: normal;
                font-size: 14px;
            }

                .fogot h6 a:hover {
                    color: #c30005;
                }

        .login form button {
            background-color: #E3869A;
            color: #FFF;
            font-size: 24px;
            padding: 5px;
            width: 100%;
            font-weight: 500;
            display: inline-block;
            cursor: pointer;
            outline: none;
            border: none;
            border-radius: 3px;
            margin: 0px 0px 10px;
        }

            .login form button a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 8px 25px;
            }

                .login form button a:hover {
                    background-color: #9C0004;
                }

        .backtrangchu {
            width: 50px;
            margin: 0px 0px 0px -95px;
        }



        .social {
            padding: 0px 80px;
        }
    </style>
</head>
<body>
    <div class="containers">

        <div class="main">
            <div>
                <img class="avatar" src="~/Uploads/UpImages/avatar.png">
            </div>
            <div class="top">
                <h1>ĐĂNG NHẬP</h1>
            </div>
            <div class="bot">
                <div class="login">
                    <form action="" method="post">
                        <input type="text" placeholder="Tên đăng nhập" name="user">
                        <input type="password" placeholder="Mật khẩu" name="password">
                        <p style="color: #c30005">@TempData["error"]</p>
                        <div class="remember">
                            @*<input type="checkbox" checked="checked"><label>Remember me</label>*@
                            <div class="fogot"><h6><a href="/Home/DangKy">Đăng ký tài khoản?</a></h6></div>
                        </div>

                        <button type="submit">Đăng nhập</button>
                    </form>
                    <div class="sign-up">
                        @*<h2>or</h2>*@
                    </div>
                </div>
                <div class="social">
                    @*<div class="fb ">
                            <a href="#"><img src="icon/fb.PNG" height="25px" alt="">Facebook</a>
                        </div>
                        <div class="fb tw">
                            <a href="#"><img src="icon/twitter.PNG" height="25px" alt="">Twitter</a>
                        </div>*@
                </div>
            </div>
        </div>

    </div>
</body>
</html>

