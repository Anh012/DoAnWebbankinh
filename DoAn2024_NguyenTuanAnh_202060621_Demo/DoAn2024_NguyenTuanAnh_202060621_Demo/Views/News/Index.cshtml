@model PagedList.PagedList<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .tt-main {
        height: 850px;
        width: 1200px;
        margin: auto;
        padding-top: 20px;
    }

    .title {
        /* height: 50px; */
        margin-bottom: 30px;
        text-align: center;
    }

    .tt-col1 {
        height: 730px;
        width: 360px;
        padding: 0px 30px 30px 0px;
        float: left;
        border-right: 1px solid #ececec;
    }

    .ttcol1-search {
        height: 70px;
        margin-bottom: 30px;
    }

        .ttcol1-search input {
            margin: 15px -3px 15px 0px;
            height: 40px;
            width: 230px;
            float: left;
            border: 0px;
            border-radius: 3px;
            box-shadow: inset 0 1px 2px rgba(0,0,0,0);
            border: 1px solid #DDDDDD;
        }

        .ttcol1-search button {
            float: left;
            margin: 10px 0px;
            height: 50px;
            width: 50px;
            background-color: #c30005;
            border: 0px;
            border-radius: 0px 3px 3px 0px;
            cursor: pointer;
        }

            .ttcol1-search button:hover {
                background-color: #9C0004;
            }

            .ttcol1-search button img {
                display: inline;
            }

    .ttcol1-post {
        height: 430px;
    }

    .post-title {
        height: 50px;
        margin-bottom: 15px;
    }

        .post-title h3 {
            font-size: 20px;
            font-weight: 600;
            line-height: 1.6;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #1c1c1c;
        }

    .post-menu {
        background-color: rgba(221, 221, 221, 0.1);
        height: 350px;
        border: 1px solid #DDD;
        border-radius: 3px;
        padding: 15px;
        list-style: none;
    }

        .post-menu li {
            height: 65px;
            padding: 10px 0px;
        }

            .post-menu li .post-box {
                height: 45px;
            }

    .post-img {
        height: 45px;
        width: 45px;
        border-radius: 50%;
        overflow: hidden;
        float: left;
    }

    .post-text {
        width: 210px;
        height: 45px;
        float: left;
        margin-left: 12px;
    }

        .post-text a {
            color: #444444;
            font-size: 13px;
        }

    .border-top {
        border-top: 1px dashed #ececec;
    }


    .tt-col2 {
        height: 730px;
        width: 840px;
        padding: 0px 30px 30px;
        float: left;
    }

    .ttcol2-main {
        height: 100%;
        width: 825px;
        margin: 0px -15px;
    }

    .ttcol2-block {
        height: 350px;
        width: 275px;
        float: left;
        padding: 0px 15px 30px 15px;
    }


    .ttcol2-block-main {
        width: 245px;
        height: 100%;
        cursor: pointer;
        position: relative;
        box-shadow: 0 1px 3px -2px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24);
    }

        .ttcol2-block-main:hover .ttblock-content {
            box-shadow: 0 3px 3px 4px rgba(0,0,0,0.12);
        }

    .ttblock-img {
        height: 150px;
        width: 245px;
    }

        .ttblock-img img {
            height: 150px;
            width: 245px;
        }

    .ttblock-box {
        width: 60px;
        height: 60px;
        background-color: white;
        position: absolute;
        top: 20px;
        left: -8px;
        border: 1px solid #c30005;
        color: #c30005;
        text-align: center;
        padding-top: 7px;
        border-radius: 50%;
    }

    .box-date {
        font-weight: bolder;
        font-size: 20px;
    }

    .box-month {
        font-size: 14px;
        font-weight: bolder;
        line-height: 0.4;
    }

    .ttcol2-block-main:hover .ttblock-box {
        background-color: #9C0004;
        color: white;
    }



    .ttblock-content {
        height: 170px;
        width: 245px;
        padding: 15px 20px;
    }

    .ttblock-title {
        height: 50px;
    }

        .ttblock-title h5 {
            font-size: 18px;
            line-height: 1.3;
            color: #1c1c1c;
        }

    .divider {
        margin: 8px 0;
        height: 2px;
        width: 30px;
        background-color: #c30005;
    }


    .ttblock-text {
        height: 65px;
        font-size: 17px;
        text-align: justify;
        color: #666666;
    }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">

<div class="container product_section_container">
    <div class="breadcrumbs d-flex flex-row align-items-center">
        <ul>
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/tin-tuc"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
        </ul>
    </div>
    <div class="container">
        <div class="tt-main">

            <div class="tt-col1">
                @*<div class="ttcol1-search">
                    <form>
                        <input type="search" placeholder="  Tìm kiếm...">
                    </form>
                    <button><img src="icon/search.png" height="25px" width="25px"></button>
                </div>*@
                <div class="ttcol1-post">
                    <div class="post-title">
                        <h3>Tin tức mới</h3>
                    </div>
                    <ul class="post-menu">
                        @Html.Action("NewNews","News")
                            </ul>
                </div>
            </div>
            <div class="tt-col2">
                <div class="ttcol2-main">
                    @if (Model != null && Model.Any())
                    {


                        foreach (var item in Model)
                        {
                            <div class="ttcol2-block">
                                <div class="ttcol2-block-main">
                                    <a href="tin-tuc/@item.Alias-@item.Id">
                                        <div class="ttblock-img">
                                            <img src="@item.Image" alt="">
                                        </div>
                                        <div class="ttblock-content">
                                            <div class="ttblock-title">
                                                <h5>@(item.Title.Length > 9 ? string.Join(" ", item.Title.Split().Take(9)) + "..." : item.Title)</h5>
                                            </div>
                                            <div class="divider"></div>
                                            <div class="ttblock-text">
                                                <span>@(item.Description.Length > 15 ? string.Join(" ", item.Description.Split().Take(15)) + "..." : item.Description)</span>
                                            </div>
                                        </div>
                                        <div class="ttblock-box">
                                            <span class="box-date">@item.CreatedBy @item.CreatedDate.ToString("dd")</span><br>
                                            <span class="box-month">@item.CreatedBy @item.CreatedDate.ToString("/MM")</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }




                    }


                    
                </div>
                <div class="row">
                    <div class="col-6"></div>
                    <div class="col-6" style="text-align:right;">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>