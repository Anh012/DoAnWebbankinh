@model IEnumerable<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_ProductCategory>

@if (Model != null && Model.Any())
{

    <ul class="sidebar_categories">
        @if (ViewBag.CateId == null)
        {
            <li class="active"><a href="~/san-pham"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Tất cả</a></li>
        }
        else
        {
            <li><a href="~/san-pham">Tất cả</a></li>
        }
        @foreach (var item in Model)
        {

            if (ViewBag.CateId == item.Id)
            {
                <li class="active"><a href="/san-pham/@item.Alias-@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
            }
            else
            {
                <li><a href="/san-pham/@item.Alias-@(item.Id)">@item.Title</a></li>

            }
        }
        @*<li><a href="#">Men</a></li>
            <li class="active"><a href="#"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Women</a></li>
            <li><a href="#">Accessories</a></li>
            <li><a href="#">New Arrivals</a></li>
            <li><a href="#">Collection</a></li>
            <li><a href="#">Shop</a></li>*@
    </ul>
}
