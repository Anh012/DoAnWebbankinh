@model IEnumerable<DoAn2024_NguyenTuanAnh_202060621_Demo.Models.AutoAdd.tb_Review>
<div class="tab_title reviews_title">
    <h4>Đánh giá (@ViewBag.Count)</h4>
</div>

<!-- User Review -->
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {


<div class="user_review_container d-flex flex-column flex-sm-row">
            <div class="user">
                <div class="user_pic">
                  
                    <img src="~/Uploads/UpImages/Introduce/users.png" style=" height:70px ; width:70px " />
                </div>
                <div class="user_rating">
                    <ul class="star_rating">
                        @{
                            int star = Convert.ToInt32(@item.Rate);
                        }
                        @if (star == 1)
                        {
                           
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                           
                        }
                        else if (star == 2)
                        {
                            
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                           
                        }
                        else if (star == 3)
                        {
                           
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            
                        }
                        else if (star == 4)
                        {
                          
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                         
                        }
                        else if (star == 5)
                        {
                           
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                           
                        }
                        @*@Html.Raw(DoAn2024_NguyenTuanAnh_202060621_Demo.Common.Common.HtmlRate(item.Rate))*@
                    </ul>
                </div>
            </div>
            <div class="review">
                <div class="review_date">@item.CreatedDate.ToString("dd/MM/yyyy")</div>
                <div class="user_name">@item.FullName</div>
                <p>@item.Contentt</p>
            </div>
        </div>

